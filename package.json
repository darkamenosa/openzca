{
  "name": "openzca",
  "version": "0.1.27",
  "description": "Open-source zca-compatible CLI to integrate Zalo with OpenClaw",
  "type": "module",
  "bin": {
    "openzca": "dist/cli.js",
    "zca": "dist/cli.js"
  },
  "main": "dist/cli.js",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/cli.ts --format esm --target node18 --out-dir dist --clean",
    "dev": "tsx src/cli.ts",
    "typecheck": "tsc -p tsconfig.json",
    "lint": "tsc -p tsconfig.json --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "zalo",
    "cli",
    "zca",
    "openclaw",
    "automation"
  ],
  "author": "Tom",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/darkamenosa/openzca.git"
  },
  "homepage": "https://github.com/darkamenosa/openzca#readme",
  "bugs": {
    "url": "https://github.com/darkamenosa/openzca/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@types/qrcode-terminal": "^0.12.2",
    "commander": "^14.0.2",
    "image-size": "^2.0.2",
    "qrcode-terminal": "^0.12.0",
    "zca-js": "^2.0.4"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "tsup": "^8.5.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.2"
  }
}
